<div class="container">
<h1>Our Flats</h1>


<br><br>

<div class="row justify-content-between">
  <% @flats.each do |flat| %>
    <div class="col-md-3 mx-1">
      <div class="card m-2" style="width: 22rem;">
       <%= image_tag "#{flat.id}.jpeg", alt: "jimmy", class: "pic-card card-img-top"%>
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.address %></p>
          <%= link_to "Detail", flat_path(flat), class: "btn btn-outline-primary" %>
          <%= link_to "Edit", flats_path, class: "btn btn-outline-warning" %>
          <%= link_to "Remove", flats_path, class: "btn btn-outline-danger" %>
        </div>
      </div>
    </div>

  <% end %>

</div>







</div>
